      </action>
    </wish>
    <wish gesture="Rotate" fingers="2">
      <action name="rotatecw" when="finish">
        <trigger prop="angle delta" min="0.08" max="1.5"/>
        <key modifier1="Control_L">R</key>     
      </action>
    </wish>
    <wish gesture="Rotate" fingers="2">
      <action name="rotateccw" when="finish">
